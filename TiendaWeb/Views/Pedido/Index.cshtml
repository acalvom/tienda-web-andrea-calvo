@model IEnumerable<TiendaWeb.Models.Pedido>

@{
    ViewBag.Title = "Index";
}

@using TiendaWeb.Models;

<h2>Lista de pedidos de @User.Identity.Name</h2>

<table class="table">
    <tr>
        <th>
            <p>Usuario</p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            <p>Producto</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_Cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @{ 
                tiendaWeb db = new tiendaWeb();
                Producto p = db.Productos.Find(item.Id_Producto);
            }
            @Html.DisplayFor(modelItem => p.Nombre)
        </td>
    </tr>
}

</table>
